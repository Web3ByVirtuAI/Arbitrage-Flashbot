# Binance API (for price monitoring - optional)
BINANCE_API_KEY=YOUR_BINANCE_API_KEY
BINANCE_SECRET_KEY=YOUR_BINANCE_SECRET_KEY

# =====================================================
# BOT TRADING PARAMETERS
# =====================================================

# Minimum profit threshold in USD (recommend: 0.01-0.05)
MIN_PROFIT_THRESHOLD=0.02

# Maximum slippage tolerance (recommend: 0.005-0.01)
MAX_SLIPPAGE=0.007

# Base gas price in Gwei (will be adjusted dynamically)
GAS_PRICE_GWEI=25

# Maximum gas limit per transaction
MAX_GAS_LIMIT=800000

# Opportunity scanning interval in milliseconds
OPPORTUNITY_SCAN_INTERVAL=2000

# Maximum concurrent trades (recommend: 1-3)
MAX_CONCURRENT_TRADES=1

# Daily profit limit in USD (safety feature)
DAILY_PROFIT_LIMIT=100

# Daily loss limit in USD (stop-loss feature)
DAILY_LOSS_LIMIT=50

# =====================================================
# RISK MANAGEMENT
# =====================================================

# Maximum trade size in USD
MAX_TRADE_SIZE=1000

# Minimum trade size in USD
MIN_TRADE_SIZE=10

# Maximum consecutive failed trades before pause
MAX_CONSECUTIVE_FAILURES=5

# Cool-down period after failures (minutes)
FAILURE_COOLDOWN_MINUTES=10

# Enable/disable emergency stop on high gas prices (true/false)
EMERGENCY_STOP_HIGH_GAS=true

# Gas price threshold for emergency stop (Gwei)
EMERGENCY_GAS_THRESHOLD=200

# =====================================================
# MONITORING & NOTIFICATIONS
# =====================================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID
ENABLE_TELEGRAM_NOTIFICATIONS=true

# Discord Webhook
DISCORD_WEBHOOK_URL=YOUR_DISCORD_WEBHOOK_URL
ENABLE_DISCORD_NOTIFICATIONS=false

# Email Notifications (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_TO=alerts@yourdomain.com
ENABLE_EMAIL_NOTIFICATIONS=false

# =====================================================
# SERVER CONFIGURATION
# =====================================================

# Server port
PORT=3000

# Node environment (production/development)
NODE_ENV=production

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# Enable API authentication (recommended for production)
ENABLE_API_AUTH=true
API_SECRET_KEY=YOUR_RANDOM_32_CHARACTER_API_KEY

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# =====================================================
# LOGGING CONFIGURATION
# =====================================================

# Log level (error/warn/info/debug)
LOG_LEVEL=info

# Log file path (optional - uses console if not set)
LOG_FILE_PATH=/var/log/flashbot/app.log

# Enable trade logging to file
ENABLE_TRADE_LOGGING=true
TRADE_LOG_PATH=/var/log/flashbot/trades.log

# =====================================================
# DEVELOPMENT/TESTING FEATURES
# =====================================================

# Enable demo mode (no real transactions)
DEMO_MODE=false

# Enable dry run mode (simulate but don't execute)
DRY_RUN=false

# Enable debug mode (verbose logging)
DEBUG_MODE=false

# Testnet configuration (for testing)
ENABLE_TESTNET=false
TESTNET_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
TESTNET_PRIVATE_KEY=YOUR_TESTNET_PRIVATE_KEY

# =====================================================
# DATABASE CONFIGURATION (OPTIONAL)
# =====================================================

# Database for storing trade history and analytics
DATABASE_TYPE=sqlite
DATABASE_PATH=/var/lib/flashbot/database.sqlite

# PostgreSQL configuration (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=flashbot
POSTGRES_USER=flashbot_user
POSTGRES_PASSWORD=YOUR_POSTGRES_PASSWORD

# =====================================================
# ADVANCED CONFIGURATION
# =====================================================

# MEV protection (requires Flashbots integration)
ENABLE_MEV_PROTECTION=false
FLASHBOTS_RELAY_URL=https://relay.flashbots.net

# Advanced gas optimization
ENABLE_EIP1559=true
MAX_PRIORITY_FEE_GWEI=2

# Token blacklist (comma-separated addresses)
TOKEN_BLACKLIST=0x...,0x...

# Minimum liquidity threshold for DEX pairs
MIN_LIQUIDITY_USD=10000

# Price impact threshold (reject if price impact > threshold)
MAX_PRICE_IMPACT=0.05